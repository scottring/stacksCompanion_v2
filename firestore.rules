rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Debug helper - let's temporarily log access attempts
    function debug() {
      return {'auth': request.auth, 'resource': resource, 'request': request};
    }

    match /forms/{formId} {
      // Allow reading any form document
      allow read: if request.auth != null;
      
      // Allow writing only if user is authenticated
      allow write: if request.auth != null;
      
      // Important: Allow access to ALL subcollections under a form
      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
